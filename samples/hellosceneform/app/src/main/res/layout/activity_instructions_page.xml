<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DDF0FF"
    tools:context=".Instructions.Instructions">
    <TextView
        android:id="@+id/versionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="20dp"
        android:gravity="top|end"
        android:text="s1.3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/textView7"
        android:layout_width="333dp"
        android:layout_height="29dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="16dp"
        android:text="1. POINT DEVICE AT POSTER"
        android:textColor="#000000"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.442"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/how_it_works" />
    <TextView
        android:id="@+id/textView9"
        android:layout_width="333dp"
        android:layout_height="29dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="60dp"
        android:text=" Avoid pointing at an angle"
        android:textColor="#a9a9a9"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.484"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/how_it_works" />
    <TextView
        android:id="@+id/step2"
        android:layout_width="333dp"
        android:layout_height="29dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="104dp"
        android:text="2. CENTER POSTER IN SCREEN"
        android:textColor="#000000"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.484"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/how_it_works" />
    <TextView
        android:id="@+id/instruction2"
        android:layout_width="329dp"
        android:layout_height="36dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="148dp"
        android:text="Align the edges of the poster with the edges of your screen as close as possible"
        android:textColor="#a9a9a9"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.414"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/how_it_works" />
    <TextView
        android:id="@+id/step3"
        android:layout_width="333dp"
        android:layout_height="29dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="204dp"
        android:text="3. PRESS       TO SCAN"
        android:textColor="#000000"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.409"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/how_it_works" />
    <TextView
        android:id="@+id/instruction3"
        android:layout_width="329dp"
        android:layout_height="36dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="244dp"
        android:text="If scan is unsuccessful, ensure poster is centered"
        android:textColor="#a9a9a9"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.285"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/how_it_works" />
    <ImageView
        android:id="@+id/pr_logo"
        android:layout_width="229dp"
        android:layout_height="103dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/pr_logo_100" />
    <TextView
        android:id="@+id/how_it_works"
        android:layout_width="200dp"
        android:layout_height="38dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="HOW IT WORKS:"
        android:textColor="#000000"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pr_logo" />
    <TextView
        android:id="@+id/textView13"
        android:layout_width="325dp"
        android:layout_height="41dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="84dp"
        android:layout_marginEnd="8dp"
        android:text="To make your own augumented reality experience or view examples, visit                                        "
        android:textAlignment="center"
        android:textSize="14dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/step3" />
    <Button
        android:id="@+id/continueBtn"
        android:layout_width="280dp"
        android:layout_height="43dp"
        android:layout_marginStart="67dp"
        android:layout_marginEnd="64dp"
        android:layout_marginBottom="16dp"
        android:text="Button"
        android:textColor="#FFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
    <TextView
        android:id="@+id/postRealitySite"
        android:layout_width="121dp"
        android:layout_height="19dp"
        android:layout_marginStart="170dp"
        android:layout_marginTop="53dp"
        android:text="www.postreality.io"
        android:textColor="#0000FF"
        android:textSize="14dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/textView13"
        app:layout_constraintTop_toBottomOf="@+id/instruction3" />
    <TextView
        android:id="@+id/TermsOfService"
        android:layout_width="344dp"
        android:layout_height="17dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="8dp"
        android:text="Click here to view our Term Of Service"
        android:textAlignment="center"
        android:textColor="#0000FF"
        android:textSize="14dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/instruction3" />
    <TextView
        android:id="@+id/textView3"
        android:layout_width="175dp"
        android:layout_height="2dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="8dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/instruction3" />
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="27dp"
        android:layout_height="25dp"
        android:layout_marginStart="88dp"
        app:layout_constraintBottom_toBottomOf="@+id/step3"
        app:layout_constraintStart_toStartOf="@+id/step3"
        app:layout_constraintTop_toTopOf="@+id/step3"
        app:layout_constraintVertical_bias="0.4"
        app:srcCompat="@drawable/scan_button" />

</androidx.constraintlayout.widget.ConstraintLayout>